<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imViewCancion"
            android:src="@drawable/cascos"
            android:layout_margin="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tViewCancionNombre"
            tools:text="Nombre de la cancion"
            app:layout_constraintStart_toEndOf="@+id/imViewCancion"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tViewCancionTiempo"
            tools:text="Nombre de la cancion"
            app:layout_constraintStart_toEndOf="@+id/imViewCancion"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tViewCancionNombre"/>



</androidx.constraintlayout.widget.ConstraintLayout>